{
  "functions": {
    "source": ".",
    "ignore": [
      ".firebase/**",
      ".firebaserc",
      "firebase.json",
      "**/node_modules/**",
      "**/public/**",
      ".git",
      "firebase-debug.log",
      "firebase-debug.*.log"
    ],
    "predeploy": [
      "bun --prefix \"$PROJECT_DIR\" install",
      "rm -r build",
      "bun --prefix \"$PROJECT_DIR\" build"
    ],
    "runtime": "nodejs16"
  },
  "firestore": {
    "rules": "src/db/firestore.rules",
    "indexes": "src/db/firestore.indexes.json"
  },
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "function": "nextjsfunc"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "firestore": {
      "port": 8080
    },
    "hosting": {
      "port": 4100
    },
    "ui": {
      "enabled": true
    }
  }
}
